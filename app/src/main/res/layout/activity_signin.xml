<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/signin_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Benvenuto su\nParkify"
                android:textSize="36dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trova un parcheggio sicuro\nin modo facile e veloce"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="left"
                android:gravity="left"
                android:textColor="@color/grey_900"
                android:fontFamily="sans-serif"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Si sono verificati ..."
                android:textSize="25dp"
                android:id="@+id/error"
                android:layout_margin="20dp"
                android:background="@color/white"
                android:textColor="@color/red"
                android:gravity="center"
                android:visibility="gone"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="40dp" />





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="sans-serif-condensed"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <EditText
                android:background="@drawable/inputbox"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/inputUsername"
                android:textSize="20dp"
                android:hint="_______________________________"
                android:textColorHint="@color/grey_700"
                />


            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="sans-serif-condensed"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <EditText
                android:background="@drawable/inputbox"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/inputPassword"
                android:textSize="20dp"
                android:hint="_______________________________"
                android:textColorHint="@color/grey_700"
                />


            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Indirizzo email"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="sans-serif-condensed"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <EditText
                android:background="@drawable/inputbox"
                android:padding="10dp"
                android:paddingBottom="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/inputEmail"
                android:textSize="20dp"
                android:hint="_______________________________"
                android:textColorHint="@color/grey_700"
                />


            <Space
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Veicolo"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="sans-serif-condensed"/>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".28"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinnerVehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinnerstyle"
                    android:spinnerMode="dropdown"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@mipmap/drop_spinner"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avatar"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="sans-serif-condensed"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <ImageView
                    android:id="@+id/avatar1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/avatar1"/>

                <ImageView
                    android:id="@+id/avatar2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="155dp"
                    android:src="@drawable/avatar2"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:id="@+id/pick1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="38dp"
                    android:text="1"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/pick2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="165dp"
                    android:text="2"
                    android:textSize="25dp" />
            </RelativeLayout>



            <Space
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/regButton"
                android:text="Registrati"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_link"
                android:textSize="15dp"
                android:id="@+id/log_link"
                android:fontFamily="sans-serif"
                android:textColor="@color/blue_900"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="60dp" />



        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>