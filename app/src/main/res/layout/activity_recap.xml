<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ValutazioneActivity"
    android:theme="@style/AppTheme" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="5dp"

            android:gravity="center"
            android:text="DisponibilitÃ "
            android:textColor="@color/black"

            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/toggleResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/radiobutton_outline"
                android:orientation="horizontal"
                android:checkedButton="@id/settimana">

                <RadioButton
                    android:id="@+id/settimana"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_widget_background"
                    android:button="@null"
                    android:gravity="center"
                    android:text="Settimana"
                    android:textSize="20dp"
                    android:textColor="@drawable/radio_text_colors" />

                <RadioButton
                    android:id="@+id/fineSettimana"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/toggle_widget_background"
                    android:button="@null"
                    android:gravity="center"
                    android:text="Fine Settimana"
                    android:textSize="20dp"
                    android:textColor="@drawable/radio_text_colors" />
            </RadioGroup>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/s_mattinaResult"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="5dp"
            android:visibility="visible" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"

                android:lines="2"
                android:text="Mattina\n(6:00-14:00)"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/s_dispMattinaResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bordo_e_sfondo_grigio"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fs_mattinaResult"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="5dp"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"

                android:lines="2"
                android:text="Mattina\n(6:00-14:00)"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/fs_dispMattinaResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bordo_e_sfondo_grigio" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/s_seraResult"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="5dp"
            android:visibility="visible" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"

                android:lines="2"
                android:text="Sera\n(15:00-21:00)"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/s_dispSeraResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bordo_e_sfondo_grigio" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fs_seraResult"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="5dp"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"

                android:lines="2"
                android:text="Sera\n(15:00-21:00)"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/fs_dispSeraResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bordo_e_sfondo_grigio" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/s_notteResult"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="5dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"

                android:lines="2"
                android:text="Notte\n(22:00-5:00)"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/s_dispNotteResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bordo_e_sfondo_grigio" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fs_notteResult"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="5dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"

                android:lines="2"
                android:text="Notte\n(22:00-5:00)"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/fs_dispNotteResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bordo_e_sfondo_grigio" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bordo_nero"
            android:orientation="vertical"
            android:paddingHorizontal="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"

                android:gravity="center"
                android:text="Sicurezza"
                android:textColor="@color/black"

                android:textSize="30sp" />

            <RatingBar
                android:id="@+id/ratingSicurezzaResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:progressTint="@color/rating_star_yellow"

                android:secondaryProgressTint="@color/rating_star_yellow" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"

            android:gravity="center"
            android:text="Commento"
            android:textColor="@color/black"

            android:textSize="30sp" />

        <TextView
            android:id="@+id/commentoResult"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="50dp"

            android:background="@drawable/rounded_shape"

            android:gravity="top"
            android:padding="5dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>