<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_preview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    app:cardElevation="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="3dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/park_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/parcheggio_via_manzoni" />
        <TextView
            android:id="@+id/parking_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/park_img"
            android:singleLine="false"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/blackTextColor"
            android:text="Parcheggio - Via Manzoni"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/security_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/park_img"
            android:layout_marginTop="65dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/blackTextColor"
            android:textSize="15sp"
            android:text="Sicurezza:"/>

        <TextView
            android:id="@+id/security_ratings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/security_text"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:text="4,3/5"
            android:textColor="@color/blackTextColor"
            android:textSize="15sp"
            android:layout_alignBaseline="@id/security_text"/>


        <ImageView
            android:id="@+id/dot_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@id/security_ratings"
            android:scaleType="fitXY"
            android:src="@drawable/dot_red" />

        <TextView
            android:id="@+id/general_ratings"
            android:layout_width="102dp"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="110dp"
            android:layout_toEndOf="@+id/park_img"
            android:text="Valutazione Generale:"
            android:textColor="@color/blackTextColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/rating_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/general_ratings"
            android:layout_marginStart="15dp"
            android:layout_marginTop="120dp"
            android:text="4,3/5"

            android:textColor="@color/blackTextColor"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/rating_quality"
            android:scaleType="fitXY"
            android:src="@drawable/ic_star_rate" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>